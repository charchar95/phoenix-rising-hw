<body>
    <h1>Edit a Material?</h1>
   <div class="form">
  <form action="/products/<%=Product.id%>?_method=PUT" method="POST"> 
    Name: <input type="text" name="name" value="<%=Product.name%>"> </br>
    Description: <input type="text" name="description" value="<%=Product.description%>"> </br>
    Image: <input type="text" name="img" value="<%=Product.img%>"> </br>
    Price: <input type="number" name="price" value="<%=Product.price%>"> </br>
    Stock: <input type="number" name="qty" value="<%=Product.qty%>"> </br>
    <input type="submit" value="Submit Changes"></br>
  </form>
</div>

